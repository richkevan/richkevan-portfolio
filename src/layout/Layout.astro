---
import LinkButton from "../components/LinkButton.astro";
import Social from "../components/Social.astro";
const { title } = Astro.props;
import MobileMenu from "../components/MobileMenu.astro";
import hello from "../assets/rich-hello.png";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vite.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="user-scalable=no, width=device-width" />
    <title>{title}</title>
  </head>
  <body>
  <div class="fixed w-screen top-0 flex flex-row items-center h-16 px-8 backdrop-blur-lg z-50 lg:opacity-0 lg:hover:opacity-100 transition-all duration-500">
    <a href="/" class="flex-1">
    <h1 class="flex items-center gap-6">
      {"</>"}Rich Kevan
    </h1>
    </a>

    <nav class="flex sm:flex-col flex-row font-mono lg:text-xl lg:gap-8">
      <!-- <script>
        const mobile = document.getElementById("mobileMenu");
        const full = document.getElementById("fullMenu");
        const desktop = window.innerWidth > 821;
        console.log(desktop, window.innerWidth);
        if (desktop) {
          mobile.style.display = "none";
          full.style.display = "flex";
        } else {
          mobile.style.display = "flex";
          full.style.display = "none";
        }
      </script> -->
      <div id="mobileMenu" class="lg:hidden">
        <MobileMenu />
      </div>
      <div id="fullMenu" class="hidden lg:flex flex-row font-mono text-xl gap-8 font-semibold">
      <a href="/" class="hover:underline">Home</a>
      <a href="/about/" class="hover:underline">About</a>
      <a href="/blog/" class="hover:underline">Blog</a>
      <a href="/portfolio/" class="hover:underline">Portfolio</a>
      </div>
    </nav>
  </div>    
</div>
<slot />
<div class="w-screen snap-end snap-always  bg-neutral-base-900">
    <div class="flex flex-col pt-16 px-4 gap-12 xl:mx-auto">
      <div class="flex flex-col xl:flex-row mx-auto items-center">
        <div>
          <div class="flex flex-row">
            <img src={hello.src} alt="rich kevan" class=" rounded-full w-1/2 xl:w-1/3 h-max"/>
            <div class="flex flex-col self-center">
              <h2>Rich Kevan</h2>
              <h3 class=" font-normal">Full Stack Engineer</h3>
            </div>
          </div>
          <Social />
        </div>
        <div class="w-full lg:w-2/5">
          <a href="/contact/">
            <div class="flex flex-row items-center">
              <h2>Get in touch</h2>
              <span class="material-symbols-outlined text-primary-blue-600 text-3xl font-bold">
                arrow_forward
              </span>
            </div>
          </a>
          <div class="flex flex-col md:flex-row md:gap-12">
            <div>
              <h5 class="uppercase">Email me:</h5>
              <LinkButton href={"mailto:hey@richkevan.com"}>
                hey@richkevan.com
              </LinkButton>
            </div>
            <div>
              <h5 class="uppercase">Call me:</h5>
              <LinkButton href={"tel:(707)770-6843"}>
                (707)770-6843
              </LinkButton>
            </div>
          </div>
        </div>
      </div>
      
    
    <div class="flex flex-col gap-4 py-8 md:border-t-2 md:border-t-neutral-base-500 xl:flex-row mx-auto xl:gap-24">
      <nav class="flex gap-4 items-center text-lg font-mono flex-wrap justify-center">
        <a href="/">Home</a>
        <a href="/about/">About</a>
        <a href="/portfolio/">Portfolio</a>
        <a href="/blog/">Blog</a>
        <a href="/contact/">Contact</a>
      </nav>
      <h5 class="text-lg text-center">
      Copyright Â© 2023 Rich Kevan | Powered by Astro & Firebase
      </h5>
    </div>
    
  </div>
</div>
</body>
<footer id="foot"></footer>
</html>
